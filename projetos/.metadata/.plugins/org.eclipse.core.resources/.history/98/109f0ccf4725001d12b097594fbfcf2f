		double[] precoVenda = new double[n];
		
		for (int i=0; i<n; i++) {
			System.out.printf("Produto %d:  ", i+1);
			sc.nextLine();
			altura[i] = sc.nextDouble();
			System.out.printf("Genero da %da pessoa:  ", i+1);
			generos[i] = sc.next().charAt(0);
			
		}
		

	}

}
