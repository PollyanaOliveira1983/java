			System.out.printf("Digite nome, primeira e segunda nota do %do aluno: \n ", i+1);
			System.out.print("Nome: ");
			nome[i] = sc.next();
			nota01[i] = sc.nextDouble();
			nota01[i] = sc.nextDouble();
			
		}
		
		int maisVelha = idades[0];
		int posicao = 0;
		
		for (int i=1; i<n; i++) {
			if (idades[i] > maisVelha) {
				maisVelha = idades[i];
